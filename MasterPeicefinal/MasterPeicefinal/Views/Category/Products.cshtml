          .button1 {
               margin-top:5px;
             margin-bottom:10px;
  z-index: 1;
  position: relative;
  font-size: inherit;
  font-family: inherit;
  color: white;
  padding: 0.5em 1em;
  outline: none;
  border: none;
  background-color:#0A4438;
  overflow: hidden;
  transition: color 0.4s ease-in-out;
}

.button1::before {
  content: '';
  z-index: -1;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 1em;
  height: 1em;
  border-radius: 50%;
  background-color: #ABD7CE;
  transform-origin: center;
  transform: translate3d(-50%, -50%, 0) scale3d(0, 0, 0);
  transition: transform 0.45s ease-in-out;
}

.button1:hover {
  cursor: pointer;
  color: #161616;
}

.button1:hover::before {
    transform: translate3d(-50%, -50%, 0) scale3d(15, 15, 15);

}
/*******************************Fav******************************/
input[type="checkbox"] {
  display: none;
}

label svg {
  width: 25px;
  height:25px;
  fill: none;
  stroke: #FFC107;
  stroke-width: 2px;
}

input[type="checkbox"]:checked + label svg {
  fill: #FFC107;
  animation: pop_42 0.5s ease-out;
}

@@keyframes pop_42 {
  0% {
    transform: scale(1);
  }

  50% {
    transform: scale(1.5);
  }

  100% {
    transform: scale(1);
  }
}


