        .p-lg-7 {
            padding: 4rem;
        }
    }

    @@media screen and (min-width: 768px) {
        .p-md-6 {
            padding: 3.5rem;
        }
    }

    @@media screen and (min-width: 576px) {
        .p-sm-2-3 {
            padding: 2.3rem;
        }
    }

    .p-1-9 {
        padding: 1.9rem;
    }

    .bg-secondary {
        background: #0A4438 !important;
    }

    @@media screen and (min-width: 576px) {
        .pe-sm-6, .px-sm-6 {
            padding-right: 3.5rem;
        }
    }

    @@media screen and (min-width: 576px) {
        .ps-sm-6, .px-sm-6 {
            padding-left: 3.5rem;
        }
    }

    .pe-1-9, .px-1-9 {
        padding-right: 1.9rem;
    }

    .ps-1-9, .px-1-9 {
        padding-left: 1.9rem;
    }

    .pb-1-9, .py-1-9 {
        padding-bottom: 1.9rem;
    }

    .pt-1-9, .py-1-9 {
        padding-top: 1.9rem;
    }

    .mb-1-9, .my-1-9 {
        margin-bottom: 1.9rem;
    }

    @@media (min-width: 992px) {
        .d-lg-inline-block {
            display: inline-block !important;
        }
    }

    .rounded {
        border-radius: 0.25rem !important;
    }

    .carCon {
        width: 35%;
        margin-left: 32.5%;
    }


    @@media only screen and (min-device-width:0px) and (max-device-width:480px) {
        .carCon {
            width: 100%;
            margin-left: 0%;
        }

        .donebutton {
            margin-left: 25%;
        }
        .p-1-9 {
            padding: 0 !important;
        }
    }

    @@media only screen and (min-device-width:481px) and (max-device-width:786px) {
        .carCon {
            width: 60%;
            margin-left: 20%;
        }

        .donebutton {
            margin-left: 34%;
        }
    }
    .nname {
        width:100%;
    }
</style>
<h2 style="text-align:center; margin-top:30px" class="IconColor1">User Profile</h2>
<hr />

<div class="container pt-4 px-4">
    <div class="row">
        <div class="col-lg-12 mb-4 mb-sm-5">
            <div class="card card-style1 border-0">
                <div class="card-body p-1-9 p-sm-2-3 p-md-6 p-lg-7">
                    <div class="row align-items-center">
                        @*<div class="col-lg-6 mb-4 mb-lg-0">
            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="...">
        </div>*@    @foreach (var item in Model)
                        {

                            <div class="col-lg-12 px-xl-10">
                                <div class="carCon">
                                    <div class="bg-secondary d-lg-inline-block py-1-9 px-1-9 px-sm-6 mb-1-9 rounded nname">
                                        <h3 class="h2 text-white mb-0 ">@item.ClientName</h3>
                                        <span class="text-primary">User</span>
                                    </div>
                                    <ul class="list-unstyled mb-1-9 nname text-center">

                                        <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Email:</span> @item.Email</li>
                                        <li class="mb-2 mb-xl-3 display-28"><span class="display-26 text-secondary me-2 font-weight-600">Phone Number:</span> @item.PhoneNumber</li>

                                    </ul>
                                </div>
                            </div>}
                    <hr />
                    @*<div>
        <input type="text" class="" /> <a class="btn btn-primary">Search</a>
    </div>*@
                    <hr />
                    <div class="col-lg-12 mb-4 mb-sm-5">
                        <div>
                            <span class="section-title text-primary mb-3 mb-sm-4">Progress Orders</span>

                        </div>
                        <div class="table-responsive"></div>
                        <table class="table text-start align-middle table-bordered table-hover mb-0">

                            <tr class="text-dark">
                                <th scope="col">ID</th>
                                <th scope="col">Data</th>
                                <th scope="col">Total</th>

                                <th></th>

                            </tr>
                            @foreach(var prog in @ViewBag.ProgressOrder){
                            <tr>
                                <td>@prog.OrderID</td>
                                <td>@prog.OrderDate</td>
                                <td>@prog.TotalPrice JD</td>

                                <td><a class="btn btn-warning" href="~/OrderDetails/ProgressOrderDetails/@prog.OrderID">Details</a></td>
                            </tr>
                                        }

                        </table>
                    </div>
                    </div>
                    <hr />

                    <div class="col-lg-12 mb-4 mb-sm-5">
                        <div>
                            <span class="section-title text-primary mb-3 mb-sm-4">Done Orders</span>

                        </div>
                        <div class="table-responsive">
                            <table class="table text-start align-middle table-bordered table-hover mb-0">

                                <tr class="text-dark">
                                    <th scope="col">ID</th>
                                    <th scope="col">Data</th>
                                    <th scope="col">Total</th>

                                    <th></th>

                                </tr>
                                @foreach (var done in @ViewBag.DoneOrder)
                                {
                                    <tr>
                                        <td>@done.OrderID</td>
                                        <td>@done.OrderDate</td>
                                        <td>@done.TotalPrice JD</td>

                                        <td><a class="btn btn-warning" href="~/OrderDetails/DoneOrderDetails/@done.OrderID">Details</a></td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
